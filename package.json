{
  "name": "rerum-imperium",
  "version": "1.0.0",
  "description": "Rerum Imperium SPA/PWA",
  "repository": {
    "type": "git",
    "url": "https://github.com/AymericBebert/rerum-imperium"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:serve": "ng build && npx http-server -p 4600 -c-1 dist/rerum-imperium/browser",
    "build:dev": "ng build --configuration development",
    "test": "ng test",
    "test:ci": "ng test --code-coverage --watch=false --browsers ChromeHeadlessNoSandbox",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "extract": "ngx-translate-extract --input './src/**/!(*.spec).{html,ts}' --output ./src/assets/i18n/{en,fr}.json --clean --sort --format namespaced-json --format-indentation '  ' --string-as-default-value 'MISSING TRANSLATION'"
  },
  "author": "Aymeric BERNARD",
  "license": "MIT",
  "dependencies": {
    "@angular/animations": "^19.0.0",
    "@angular/cdk": "^19.0.0",
    "@angular/common": "^19.0.0",
    "@angular/compiler": "^19.0.0",
    "@angular/core": "^19.0.0",
    "@angular/forms": "^19.0.0",
    "@angular/material": "^19.0.0",
    "@angular/platform-browser": "^19.0.0",
    "@angular/platform-browser-dynamic": "^19.0.0",
    "@angular/router": "^19.0.0",
    "@angular/service-worker": "^19.0.0",
    "@ngx-translate/core": "^16.0.3",
    "rxjs": "~7.8.1",
    "socket.io-client": "~4.8.1",
    "tslib": "^2.8.1",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.0.1",
    "@angular/cli": "^19.0.1",
    "@angular/compiler-cli": "^19.0.0",
    "@angular/language-service": "^19.0.0",
    "@stylistic/eslint-plugin": "^2.11.0",
    "@types/jasmine": "~5.1.4",
    "@types/node": "^22.9.1",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@vendure/ngx-translate-extract": "^9.3.1",
    "angular-eslint": "18.4.1",
    "eslint": "~9.15.0",
    "jasmine-core": "~5.4.0",
    "jasmine-spec-reporter": "^7.0.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "2.1.0",
    "ts-node": "~10.9.2",
    "typescript": "~5.6.3",
    "typescript-eslint": "^8.15.0"
  }
}
